<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XhuTimetable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.XhuTimetable.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XhuTimetable.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.XhuTimetable.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- jetpack core splashscreen -->
    <style name="JetpackSplashBaseTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">#2e85df</item>

        <!-- 需要配置postSplashScreenTheme属性，主题需要是AppCompat -->
        <!-- 否则会报异常：You need to use a Theme.AppCompat theme (or descendant) with this activity -->
        <item name="postSplashScreenTheme">@style/Theme.XhuTimetable</item>
    </style>

    <style name="JetpackSplashTheme" parent="JetpackSplashBaseTheme" />
</resources>